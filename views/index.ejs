<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Make your Daily Task</title>
    <!-- Bootstrap CSS CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Optional custom CSS -->
    <link rel="stylesheet" href="style.css" />
</head>
<body class="bg-light">
  <nav class="navbar navbar-dark bg-dark">
  <div class="container">
    <a class="navbar-brand" href="#">
      <!-- <img src="logo1.png" alt="" width="60" height="40"> -->
      <h3>Make your daily Task</h3>
    </a>
  </div>
</nav>
    <div class="container py-5">
        <!-- <h1 class="mb-4">MAke Your Daily Schedules</h1> -->
        <div class="card card-body bg">
            <center><h2 class="mt-4"><b>Add Your Task</b></h2></center>
            <!-- <form action="/tasks" method="POST" class="mb-3">
                <div class="mb-3">
                    <label for="name" class="form-label">Task Name</label>
                    <input type="text" class="form-control bginput" name="name" placeholder="Task Name" required />
                </div> -->
                <div class="mb-3">
                    <label for="description" class="form-label">Task Description</label>
                    <input type="text" class="form-control bginput" name="description" placeholder="Task Description" required />
                </div>
                <div class="mb-3">
                    <label for="datetime" class="form-label">Date & Time</label>
                    <input type="datetime-local" class="form-control bginput" name="datetime" required />
                </div>
                <div class="mb-3">
                    <label for="type" class="form-label">Type</label>
                    <select class="form-select bginput" name="type">
                        <option value="Priority">Priority</option>
                        <option value="Normal">Normal</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-success mt-5">Add Task</button>
            </form>
        </div>
        <div class="row">
            <% tasks.forEach(function(task) { %>
            <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                <div class="card bgcard">
                    <div class="card-body">
                        <h5 class="card-title"><%= task.name %></h5>
                        <p class="card-text"><b>What to do:</b><%= task.description %></p>
                        <p class="card-text"><b>Type:</b> <%= task.type %></p>
                        <p class="card-text">
                            <b>Date & Time:</b> <%= task.datetime ? task.datetime.toISOString().replace('T', ' ').substr(0, 16) : 'No date provided' %>
                        </p>
                        <!-- Assuming task._id is the variable containing the ID -->
                        <form action="/tasks/delete/<%= task._id %>?_method=DELETE" method="POST">
                            <button type="submit" class="btn btn-danger">Delete Task</button>
                        </form>

                        <a href="/tasks/edit/<%= task._id %>"><button class="btn btn-primary">Edit</button></a>

                    </div>
                </div>
            </div>
            <% }) %>
        </div>
    </div>

    <!-- Bootstrap JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
